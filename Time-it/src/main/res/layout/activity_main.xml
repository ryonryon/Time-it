<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:textAlignment="center"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:id="@+id/timeText1"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginStart="100dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
    />
    <TextView
            android:textAlignment="center"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:id="@+id/timeText2"
            android:textSize="30sp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginStart="100dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
    />
    <TextView
            android:textAlignment="center"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:id="@+id/timeText3"
            android:textSize="30sp"
            android:layout_marginTop="132dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginStart="100dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
    />
    <TextView
            android:textAlignment="center"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:id="@+id/timeText4"
            android:textSize="30sp"
            android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginStart="100dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
    />
    <TextView
            android:textAlignment="center"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:id="@+id/actionText"
            android:textSize="30sp"
            android:layout_marginTop="265dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginStart="100dp"
            android:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
    />
    <Button
            android:text="Arrival1"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/arrival1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Arrival2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrival2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/rest" android:layout_marginTop="15dp"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/save" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/arrival2"/>
    <Button
            android:text="GET ON"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/getOn"
            android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"/>
    <Button
            android:text="REST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rest"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/arrival1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/getOn"/>
    <Button
            android:text="GET OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getOff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/start" android:layout_marginTop="15dp"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:id="@+id/reset"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/getOff"/>
</android.support.constraint.ConstraintLayout>